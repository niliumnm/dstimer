<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dstimer.mapper.MessagesMapper">

    <update id="update">
        update messages
        <set>
            <if test="group_name != null"> group_name = #{group_name},</if>

            <if test="unread_messages_number != null">unread_messages_number = #{unread_messages_number},</if>

            <if test="event_name != null">event_name = #{event_name},</if>

            <if test="content != null">content = #{content},</if>

            <if test="remark != null">remark = #{remark},</if>

            <if test="starting_time != null">starting_time = #{starting_time},</if>

            <if test="deadline != null">deadline = #{deadline}</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

</mapper>

